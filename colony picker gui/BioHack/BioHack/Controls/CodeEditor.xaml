<UserControl x:Class="BioHack.Controls.CodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BioHack.Controls"
             xmlns:wpf="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
             xmlns:sc="clr-namespace:ScintillaNET;assembly=ScintillaNET"
             mc:Ignorable="d">
    <wpf:WindowsFormsHost Name="Panel"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
        <sc:Scintilla Dock="Fill"
                      Anchor="None"
                      Lexer="Python"/>
    </wpf:WindowsFormsHost>
</UserControl>
